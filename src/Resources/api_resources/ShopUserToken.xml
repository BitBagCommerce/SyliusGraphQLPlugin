<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
    <resource class="BitBag\SyliusGraphqlPlugin\Model\ShopUserToken" shortName="ShopUserToken">
        <graphql>
            <operation name="shop_login">
                <attribute name="mutation">api_platform.login_mutation_resolver</attribute>
                <attribute name="write">false</attribute>
                <attribute name="args">
                    <attribute name="username">
                        <attribute name="type">String!</attribute>
                    </attribute>
                    <attribute name="password">
                        <attribute name="type">String!</attribute>
                    </attribute>
                    <attribute name="orderTokenValue">
                        <attribute name="type">String</attribute>
                    </attribute>
                </attribute>
            </operation>

            <operation name="shop_refresh">
                <attribute name="messenger">controller</attribute>
<!--                <attribute name="input">gesdinet.jwtrefreshtoken:refresh</attribute>-->
            </operation>
        </graphql>

        <property name="id" identifier="true" readable="true" />
        <property name="token"  description="JWT Token" />
        <property name="refreshToken"  description="JWT Refresh Token" />
        <property name="user" description="User" readable="true">
            <subresource resourceClass="%sylius.model.shop_user.class%" maxDepth="3"/>
        </property>

    </resource>

</resources>
