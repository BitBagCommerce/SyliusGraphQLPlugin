<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
    <resource class="%bitbag_graphql.model.invoice.class%" shortName="Invoice">
        <graphql>
            <operation name="collection_query">
                <attribute name="pagination_type">page</attribute>
                <attribute name="filters">
                    <attribute>bitbag.sylius_graphql_plugin.api.invoice_order_token_filter</attribute>
                </attribute>
            </operation>
        </graphql>

        <attribute name="filters">
            <attribute>bitbag.sylius_graphql_plugin.api.invoice_order_token_filter</attribute>
        </attribute>

        <property name="id" identifier="true" writable="false" />
        <property name="billingData" readable="true" />
        <property name="shopBillingData" readable="true" />
        <property name="channel" readable="true" />
        <property name="order" readable="true" />
        <property name="number" readable="true" />
        <property name="issuedAt" readable="true" />
        <property name="currencyCode" readable="true" />
        <property name="localeCode" readable="true" />
        <property name="total" readable="true" />
        <property name="url" readable="true" />
    </resource>
</resources>
